{
  "cli": {
    "version": ">= 16.17.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "prebuildCommand": "npm install --force --legacy-peer-deps"
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "prebuildCommand": "npm install --force --legacy-peer-deps"
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "prebuildCommand": "npm install --force --legacy-peer-deps"
    }
  },
  "submit": {
    "production": {}
  }
}
